{
  "name": "sampleapis",
  "version": "1.0.0",
  "description": "As I started working on the Futurama Database, I noticed that I could create a bunch of these database with little extra effort. So this is that effort.",
  "author": "Jermbo",
  "license": "MIT",
  "homepage": "https://github.com/jermbo/SampleAPIs#readme",
  "main": "index.js",
  "scripts": {
    "db:avatar": "./node_modules/.bin/json-server --watch ./dbs/avatardb.json --port 4000",
    "server:avatar": "./node_modules/.bin/browser-sync start --server --directory --port 7777 --serveStatic './AvatarDB' --files './AvatarDB'",
    "futurama": "npm run server:futurama & npm run db:futurama",
    "db:futurama": "./node_modules/.bin/json-server --watch ./dbs/futuramadb.json --port 4000",
    "web:futurama": "./node_modules/.bin/browser-sync start --port 7777 --server --startPath FuturamaDB/index.html -w",
    "db:avatar": "./node_modules/.bin/json-server --watch ./dbs/avatardb.json --port 4000",
    "web:avatar": "./node_modules/.bin/browser-sync start --port 7777 --server --startPath AvatarDB/index.html -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jermbo/SampleAPIs.git"
  },
  "devDependencies": {
    "browser-sync": "^2.24.5",
    "json-server": "^0.14.0"
  }
}
